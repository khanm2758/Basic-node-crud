


<div class="note-card">
  <h2 class="mb-3 text-warning">ğŸ“„ <%= note.title %></h2>
  <p class="fs-5"><%= note.body %></p>
  <p>Status: <span class="badge <%= note.done ? 'bg-success' : 'bg-warning text-dark' %>"><%= note.done ? 'Done' : 'Pending' %></span></p>
  <div class="mt-3">
    <% if (!note.done) { %>
      <form action="/notes/<%= note.id %>/done" method="POST" class="d-inline">
        <button class="btn btn-warning">Mark as Done</button>
      </form>
    <% } %>
    <a href="/notes/<%= note.id %>/edit" class="btn btn-secondary">Edit</a>
    <a href="/notes" class="btn btn-outline-primary">Back</a>
  </div>
</div>